<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.LMSSeriesActivity">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_weight="2"
        android:layout_marginTop="@dimen/five_dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_lms_series"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_no_lms_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/eighteen_sp"
            android:visibility="gone"
            android:text="@string/no_series"/>

        <Button
            android:id="@+id/btn_lms_series_update_settings"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/thirty_five_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:textColor="@color/white_color"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_below="@+id/tv_no_lms_series"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:textSize="@dimen/twelve_sp"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingRight="@dimen/ten_dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:text="@string/click_here_settings"/>

    </RelativeLayout>

</LinearLayout>