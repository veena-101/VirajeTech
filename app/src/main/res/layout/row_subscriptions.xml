<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/five_dp"
    android:layout_marginLeft="@dimen/five_dp"
    android:layout_marginRight="@dimen/five_dp"
    app:cardCornerRadius="@dimen/five_dp">

    <LinearLayout
        android:padding="@dimen/ten_dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="@dimen/five_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_subsciptions_plan_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/eighteen_sp"
                android:layout_centerInParent="true"
                android:text="Paln Type"
                android:textAllCaps="true" />


            <TextView
                android:id="@+id/tv_subscriptions_status"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/google_color"
                android:gravity="center"
                android:padding="@dimen/five_dp"
                android:textSize="@dimen/fifteen_sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="Success"/>


        </RelativeLayout>


        <TextView
            android:id="@+id/tv_subscriptions_name"
            android:padding="@dimen/five_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sixteen_sp"
            android:text="Name"/>


        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/five_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fifteen_sp"
                android:textStyle="bold"
                android:text="Paid By"/>

            <TextView
                android:id="@+id/tv_subscriptions_paid_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fifteen_sp"
                android:paddingLeft="@dimen/ten_dp"
                android:textAllCaps="true"
                android:text="Razor pay"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="@dimen/five_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/transaction_date"/>
                <TextView
                    android:id="@+id/tv_subsciptions_trans_date"
                    android:padding="@dimen/five_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_subscriptions_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_gravity="right"
                android:textColor="@color/subscription_color"
                android:text="@string/view"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_subscriptions_amounts"
            android:padding="@dimen/five_dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_subscriptions_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="Cost"/>

            <TextView
                android:id="@+id/tv_subscriptions_after_discount"
                android:layout_toRightOf="@+id/tv_subscriptions_cost"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="Aftr . Dist"/>

            <TextView
                android:id="@+id/tv_subscriptions_paid_amount"
                android:layout_toRightOf="@+id/tv_subscriptions_after_discount"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="Paid"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_subscriptions_dates"
            android:padding="@dimen/five_dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/fifteen_sp"
                android:textColor="@color/subscription_color"
                android:text="@string/from"/>

            <TextView
                android:id="@+id/tv_subscriptions_from_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:text="04/06/2018"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/fifteen_sp"
                android:textColor="@color/subscription_color"
                android:text="@string/to"/>

            <TextView
                android:id="@+id/tv_subscriptions_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:text="04/06/2018"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
