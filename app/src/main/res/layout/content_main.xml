<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nested_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/img_main_exams"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/three_dp"
                android:layout_weight="2"
                android:elevation="@dimen/ten_dp"
                app:cardCornerRadius="@dimen/five_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eighty_dp"
                    android:background="@drawable/analysis_bg">

                    <ImageView
                        android:layout_width="@dimen/fifty_dp"
                        android:layout_height="@dimen/fifty_dp"
                        android:padding="@dimen/five_dp"
                        android:elevation="@dimen/ten_dp"
                        android:layout_gravity="center"
                        android:src="@drawable/exams" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/five_dp"
                        android:text="@string/exams"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/fifteen_sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/img_main_lms"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/three_dp"
                android:layout_weight="2"
                android:elevation="@dimen/ten_dp"
                app:cardCornerRadius="@dimen/five_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eighty_dp"
                    android:background="@drawable/popular_exams_bg">

                    <ImageView
                        android:layout_width="@dimen/fifty_dp"
                        android:layout_height="@dimen/fifty_dp"
                        android:padding="@dimen/five_dp"
                        android:layout_gravity="center"
                        android:src="@drawable/lms" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/five_dp"
                        android:text="@string/lms"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/fifteen_sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/six_dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/img_main_analysis"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/three_dp"
                android:layout_weight="2"
                android:elevation="@dimen/ten_dp"
                app:cardCornerRadius="@dimen/five_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eighty_dp"
                    android:background="@drawable/exams_bg">

                    <ImageView
                        android:layout_width="@dimen/fifty_dp"
                        android:layout_height="@dimen/fifty_dp"
                        android:padding="@dimen/five_dp"
                        android:layout_gravity="center"
                        android:src="@drawable/analysis" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/five_dp"
                        android:text="@string/analysis"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/fifteen_sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/img_main_notifications"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/three_dp"
                android:layout_weight="2"
                android:elevation="@dimen/ten_dp"
                app:cardCornerRadius="@dimen/five_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eighty_dp"
                    android:background="@drawable/notifications_bg">

                    <ImageView
                        android:layout_width="@dimen/fifty_dp"
                        android:layout_height="@dimen/fifty_dp"
                        android:padding="@dimen/five_dp"
                        android:layout_gravity="center"
                        android:src="@drawable/notifications" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/notifications"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/fifteen_sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/six_dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/img_main_lms_series"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/three_dp"
                android:layout_weight="2"
                android:elevation="@dimen/ten_dp"
                app:cardCornerRadius="@dimen/five_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eighty_dp"
                    android:background="@drawable/lms_series_bg">

                    <ImageView
                        android:layout_width="@dimen/fifty_dp"
                        android:layout_height="@dimen/fifty_dp"
                        android:padding="@dimen/five_dp"
                        android:layout_gravity="center"
                        android:src="@drawable/lms_series" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/five_dp"
                        android:text="@string/lms_series"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/fifteen_sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/img_main_exams_series"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/three_dp"
                android:layout_weight="2"
                android:elevation="@dimen/ten_dp"
                app:cardCornerRadius="@dimen/five_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eighty_dp"
                    android:background="@drawable/exams_series_bg">

                    <ImageView
                        android:layout_width="@dimen/fifty_dp"
                        android:layout_height="@dimen/fifty_dp"
                        android:padding="@dimen/five_dp"
                        android:layout_gravity="center"
                        android:src="@drawable/exam_series" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/five_dp"
                        android:text="@string/exam_series"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/fifteen_sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:background="@color/orange_300" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/five_dp"
            android:padding="@dimen/five_dp"
            android:text="@string/popular_exams"
            android:textColor="@color/orange_300"
            android:textSize="@dimen/ten_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_no_popular_exams"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred_dp"
            android:padding="@dimen/five_dp"
            android:text="@string/no_popular_exams"
            android:textSize="@dimen/fifteen_sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/take_exam_bg"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_popular_exams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:background="@color/blue_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/five_dp"
            android:padding="@dimen/five_dp"
            android:text="@string/popular_lms"
            android:textColor="@color/blue_color"
            android:textSize="@dimen/ten_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_no_popular_lms"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred_dp"
            android:padding="@dimen/five_dp"
            android:text="@string/no_popular_lms"
            android:textSize="@dimen/fifteen_sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/take_exam_bg"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_popular_lms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


</androidx.core.widget.NestedScrollView>
